<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.note.cesar.MainActivity"
    android:orientation="vertical"
    android:weightSum="100">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_weight="10">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Caesar Code"
           android:textSize="32sp" />
       <android.support.v7.widget.AppCompatSpinner
           android:id="@+id/lang_spinner"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toLeftOf="@+id/action_spinner">
       </android.support.v7.widget.AppCompatSpinner>
       <android.support.v7.widget.AppCompatSpinner
           android:id="@+id/action_spinner"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true">
       </android.support.v7.widget.AppCompatSpinner>
   </RelativeLayout>
    <EditText
        android:id="@+id/slide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="slide"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="70"
        android:gravity="center">
        <NumberPicker
            android:id="@+id/normal_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_margin="8dp">
        </NumberPicker>
        <NumberPicker
            android:id="@+id/number_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center"
            android:layout_margin="8dp">
        </NumberPicker>
        <NumberPicker
            android:id="@+id/code_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_margin="8dp">
        </NumberPicker>
    </LinearLayout>
    <TextView
        android:id="@+id/normal_text"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:maxLines="10"
        android:ellipsize="end"
        android:layout_gravity="bottom"/>
    <TextView
        android:id="@+id/code_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="10"
        android:ellipsize="end"
        android:layout_gravity="bottom"
        android:layout_margin="8dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <Button
            android:id="@+id/file_chooser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save to file"
            android:layout_gravity="center" />
        <Button
            android:id="@+id/decode_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>
